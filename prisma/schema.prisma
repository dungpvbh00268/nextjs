// schema.prisma

/**
 * npx prisma migrate dev => update database schema
 * npx prisma db push => push schema changes to database
 */

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

