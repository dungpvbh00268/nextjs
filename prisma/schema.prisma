model User {
    id        String   @id @default(cuid())
    name      String?
    email     String?  @unique
    image     String?
    provider  String?
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")

    @@index([provider])
    @@map(name: "users")
}
